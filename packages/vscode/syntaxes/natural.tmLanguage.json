{
  "name": "Natural",
  "scopeName": "source.natural",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#concept-definition"
    },
    {
      "include": "#concept-reference"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#urls"
    },
    {
      "include": "#http-methods"
    },
    {
      "include": "#prose"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.natural",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.natural",
          "match": "#.*$"
        },
        {
          "name": "comment.block.natural",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "concept-definition": {
      "name": "entity.name.type.concept.natural",
      "match": "^@[A-Z][A-Za-z0-9_]*",
      "captures": {
        "0": {
          "name": "keyword.control.concept.natural"
        }
      }
    },
    "concept-reference": {
      "name": "variable.other.concept-ref.natural",
      "match": "(?<!^)@[A-Z][A-Za-z0-9_]*\\b"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.natural",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.natural",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.natural",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.natural",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.natural",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.natural",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "urls": {
      "name": "markup.underline.link.natural",
      "match": "https?://[^\\s]+"
    },
    "http-methods": {
      "name": "keyword.other.http-method.natural",
      "match": "\\b(GET|POST|PUT|PATCH|DELETE|HEAD|OPTIONS)\\b"
    },
    "prose": {
      "name": "text.natural",
      "match": ".+"
    }
  }
}
